<% content_for :title, "Detalles del Usuario" %>

<div class="usuario-details-container">
  <h1 class="usuario-details-header">Detalles del Usuario</h1>

  <% if notice %>
    <p style="color: green;"><%= notice %></p>
  <% end %>

  <div class="usuario-info">
    <p><strong>ID:</strong> <%= @usuario.id %></p> <!-- Mostrar el ID del usuario -->
    <p><strong>Nombre:</strong> <%= @usuario.nombre %></p>
    <p><strong>Email:</strong> <%= @usuario.email %></p>
    <p><strong>Fecha de creación:</strong> <%= @usuario.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
    <p><strong>Activo:</strong> <%= @usuario.activo ? 'Sí' : 'No' %></p>
    <!-- Agrega aquí más atributos del usuario si es necesario -->
  </div>

  <div class="usuario-actions">
    <%= link_to "Editar este usuario", edit_usuario_path(@usuario), class: "edit-usuario-button" %> |
    <%= link_to "Volver a usuarios", usuarios_path, class: "back-to-usuarios" %>
    <%= button_to "Eliminar este usuario", @usuario, method: :delete, data: { confirm: "¿Estás seguro de que deseas eliminar este usuario?" }, class: "delete-usuario-button" %>
  </div>
</div>

